        }
        
        .document-item .name {
            font-weight: 600;
            color: #1e40af;
            font-size: 14px;
        }
        
        .upload-instructions {
            background-color: #f0fdf4;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #22c55e;
            margin: 20px 0;
        }
        
        .upload-instructions h4 {
            color: #166534;
            margin-bottom: 10px;
        }
        
        .upload-instructions ul {
            padding-left: 20px;
            color: #166534;
        }
        
        .upload-instructions li {
            margin-bottom: 5px;
        }
        
        .benefits-section {

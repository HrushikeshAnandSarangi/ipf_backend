            margin: 25px 0;
        }
        
        .important-note h4 {
            color: #dc2626;
            font-size: 16px;
            margin-bottom: 10px;
        }
        
        @media (max-width: 600px) {
            .content {
                padding: 20px 15px;
            }
            
            .contact-info {
                flex-direction: column;
                gap: 10px;
            }
            
            .document-grid {
                grid-template-columns: 1fr;
            }
            
            .benefits-grid {
                grid-template-columns: 1fr;
            }
            
            .detail-row {
                flex-direction: column;
                gap: 5px;
            }
        }
    </style>
</head>
<body>
